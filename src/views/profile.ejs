<% include partials/head %>
<main class="container mt-4">
  <section class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mb-3 animated fadeIn">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="<%=image.path %>" class="card-img" alt="<%=image.title %>">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=image.title %></h5>
                  <p class="card-text"><%=image.description %></p>
                  <p class="card-text"><small class="text-muted"><%=format(image.create_at) %></small></p>
                  <div class="text-right">
                    <a class="btn btn-danger" href="/image/delete/<%=image._id %>">Remove</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  </section>
</main>
<% include partials/footer %>