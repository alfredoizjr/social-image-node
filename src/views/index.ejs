<% include partials/head %>
<main class="container mt-4">
  <section class="row">
    <div class="card-columns">

      <% images.forEach(function(image) { %>
      <div class="card animated fadeIn">
        <img
          src="<%=image.path %>"
          alt="<%=image.title %>"
          class="card-img-top"
        />
        <div class="card-body">
            <h5 class="card-title"><%=image.title %></h5>
            <p class="card-text"><%=image.description %></p>
            <p><%= format(image.create_at) %></p>
            <a href="/image/<%=image._id %>" class="btn btn-primary">view profile</a>
        </div>
      </div>
      <% }) %>
    </div>
    <% if(message !== '') { %>
    <div class="col-md-12 text-center">
        <p id="alert" class="alert alert-success animted fadeInUp" style="width: 100%;">
            <%=message %>
        </p>
    </div>
    <% } %>
  </section>
</main>
<% include partials/footer %>
